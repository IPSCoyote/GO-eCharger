{
    "elements": 
    [
      { "type": "Label", "label": "Basic Data" },
      { "type": "ValidationTextBox", "name": "IPAddressCharger", "caption": "IP Address" },
      { "type": "Select", "name": "MaxAmperage", "caption": "Fuse protection",
            "options": [
                { "label": "6A - 4,1kw", "value":  6 },
                { "label": "10A - 6,9kw", "value": 10 },
                { "label": "12A - 8,2kw", "value": 12 },
                { "label": "16A - 11kw", "value": 16 },
                { "label": "32A - 22kw", "value": 32 }
        ]},
      { "type": "Label", "label": "Update Intervals" },
      {
        "type": "RowLayout",
        "items": [
          {
            "type": "NumberSpinner",
            "name": "UpdateIdle",
            "caption": "Update Idle",
            "digits": 0 ,
            "hex": false,
            "suffix": "seconds"
          },
          { "type": "Label", "caption": "   " },
          {
            "type": "NumberSpinner",
            "name": "UpdateCharging",
            "caption": "Update Charging",
            "digits": 0 ,
            "hex": false,
            "suffix": "seconds"}
        ]
      },
      {
        "type": "ExpansionPanel",
        "caption": "Comfort Functions",
        "items": [
          {
            "type": "CheckBox",
            "name": "AutoReactivate",
            "caption": "Auto Reactivate"
          },
          {
            "type": "CheckBox",
            "name": "AutoActivateOnStopSet",
            "caption": "AutoActivateOnStopSet"
          }
        ]
      },
      {
        "type": "ExpansionPanel",
        "caption": "Vehicle Data",
        "items": [
          {
            "type": "RowLayout",
            "items": [
              {
                "type": "NumberSpinner",
                "name": "AverageConsumption",
                "caption": "AverageConsumption",
                "digits": 1,
                "hex": false,
                "suffix": "kwh"
              },
              { "type": "Label", "caption": "   " },
              {
                "type": "NumberSpinner",
                "name": "MaxLoadKw",
                "caption": "MaxLoadKw",
                "digits": 1,
                "hex": false,
                "suffix": "kw"
              }
            ]
          }
        ]
      },
      {
        "type": "ExpansionPanel",
        "caption": "Special Functions",
        "items": [
          {
            "type": "Checkbox",
            "name": "calculateCorrectedData",
            "caption": "DataCorrection",
            "value": false,
            "onChange": "onChangeDataCorrection($id)"
          },
          {
            "type": "RowLayout",
            "items": [
              {
                "type": "NumberSpinner",
                "name": "MeasuredConnectedPowerL1",
                "caption": "Measured Power L1",
                "digits": 0,
                "suffix": "V",
                "value": 230,
                "visible": false
              },
              { "type": "Label", "caption": "   " },
              {
                "type": "NumberSpinner",
                "name": "MeasuredConnectedPowerL2",
                "caption": "Measured Power L2",
                "digits": 0,
                "suffix": "V",
                "value": 230,
                "visible": false
              },
              { "type": "Label", "caption": "   " },
              {
                "type": "NumberSpinner",
                "name": "MeasuredConnectedPowerL3",
                "caption": "Measured Power L3",
                "digits": 0,
                "suffix": "V",
                "value": 230,
                "visible": false
              }
            ]
          }
        ]
      }
    ],
    "actions":  
    [
        { "type": "Button", "label": "Check Connection", "onClick": "GOeCharger_Update($id);" }
    ],
    "status":   
    [
      { "code": 102, "icon": "active",      "caption": "GO-eCharger identified" },
      { "code": 200, "icon": "inactive",    "caption": "Configuration missing" },
      { "code": 201, "icon": "error",       "caption": "IP invalid" },
      { "code": 202, "icon": "error",       "caption": "No device found on IP" },
      { "code": 203, "icon": "error",       "caption": "No JSON returned from IP" },
      { "code": 204, "icon": "error",       "caption": "No go-eCharger available at IP" }
    ]
}
